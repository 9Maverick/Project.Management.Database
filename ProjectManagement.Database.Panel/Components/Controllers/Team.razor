@code {
    [Parameter, EditorRequired]
    public ITeamViewModel viewModel { get; set; } = null!;
}

@if(!viewModel.IsDeleted)
{
    @if (!viewModel.IsEditing)
    {

        <tr>
            <td>
                @viewModel.Team.Name
            </td>
            <td>
                @viewModel.Parent?.Name
            </td>
            <td>
                <button @onclick="viewModel.Edit">  Edit  </button>
                <button @onclick="viewModel.Delete">Delete</button>
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td>
                <input @bind="viewModel.Team.Name" class="form-control" placeholder="Name" />
            </td>
            <td>
                <input @bind="viewModel.Team.ParentId" class="form-control" placeholder="Name" />
            </td>
            <td>
                <button @onclick="viewModel.Save">Save</button>
                <button @onclick="viewModel.Cancel">Cancel</button>
            </td>
        </tr>
    }
}